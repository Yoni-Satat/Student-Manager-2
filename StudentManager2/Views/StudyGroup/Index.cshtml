@model IEnumerable<StudentManager2.Models.StudyGroup>

@{
    ViewBag.Title = "Study Groups";
}

<h2>My Study Groups</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Group Title", "Index", new { sortOrder = ViewBag.NameSortParm1 })
        </th>
        <th>
            @Html.ActionLink("Course Title", "Index", new { sortOrder = ViewBag.NameSortParm2 })
        </th>
        <th>
            @Html.ActionLink("Course Level", "Index", new { sortOrder = ViewBag.NameSortParm3 })
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Level)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StudyGroupID }) |
                @Html.ActionLink("Details", "Details", new { id = item.StudyGroupID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.StudyGroupID })
            </td>
        </tr>
    }

</table>
