@model StudentManager2.ViewModels.GroupIndexData

@{
    ViewBag.Title = "Study Groups";
}

<h2>My Study Groups</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Group Title
        </th>
        <th>
            Course Title
        </th>
        <th>
            Course Level)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.StudyGroups) {
    string selectedRow = "";
    if (item.StudyGroupID == ViewBag.StudyGroupID)
    {
        selectedRow = "success";
    }
    <tr class="@selectedRow">
        <td>
            @Html.DisplayFor(modelItem => item.GroupTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Level)
        </td>
        <td>
            @Html.ActionLink("Select", "Index", new { id = item.StudyGroupID }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.StudyGroupID }) |
            @Html.ActionLink("Details", "Details", new { id = item.StudyGroupID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.StudyGroupID })
        </td>
    </tr>
}

</table>

@if (Model.Students != null)
{
    <h3>Students in selected group</h3>
    <table class="table">
        <tr>
            <th>Student name</th>
            <th>Matriculation No.</th>
            <th>Nationality</th>
            <th>Date of Birth</th>
        </tr>
        @foreach(var student in Model.Students)
        {
        <tr>
            <td>@student.FullName</td>
            <td>@student.MatricNumber</td>
            <td>@student.Origin</td>
            <td>@student.DateOfBirth</td>
        </tr>
        }
    </table>
}
