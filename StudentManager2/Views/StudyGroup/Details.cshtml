@model StudentManager2.Models.StudyGroup

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>StudyGroup</h4>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.GroupTitle)</th>
            <th>@Html.DisplayNameFor(model => model.Course.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Course.Level)</th>
        </tr>
        <tr>
            <td>@Html.DisplayFor(model => model.GroupTitle)</td>
            <td>@Html.DisplayFor(model => model.Course.Title)</td>
            <td>@Html.DisplayFor(model => model.Course.Level)</td>
        </tr>
    </table>

    <hr />
    <h3>Students</h3>
    <table class="table">
        <tr>
            <th>Student Name</th>
            <th>Date of Birth</th>
            <th>Matriculation No.</th>
            <th>Nationality</th>
        </tr>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.FullName</td>
                <td>@student.DateOfBirth</td>
                <td>@student.MatricNumber</td>
                <td>@student.Origin</td>
            </tr>

         }
    </table>

   
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.StudyGroupID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
